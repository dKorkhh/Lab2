<Window x:Class="Lab2.GridForm.AllUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2.GridForm"
        mc:Ignorable="d"
        Title="AllUserWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" IsReadOnly="True" Margin="10" />
        <Button Content="Add" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="AddUser_Click"/>
        <Button Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="90,0,0,10" Click="EditUser_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="170,0,0,10" Click="DeleteUser_Click"/>
    </Grid>
</Window>
