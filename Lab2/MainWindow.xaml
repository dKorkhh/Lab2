<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="700">
    <Grid>
        <Border CornerRadius="10" Background="#FF748DF1" Padding="20" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                <TextBlock Text="Персональна інформація" FontSize="18" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="0 0 0 10"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                    <TextBox Name="FirstNameBox" Width="250" Height="30" Margin="5" Padding="5"
                             Text="Ім'я" Foreground="Gray"/>
                    <TextBox Name="LastNameBox" Width="250" Height="30" Margin="5" Padding="5"
                             Text="Прізвище" Foreground="Gray"/>
                    <TextBox Name="EmailBox" Width="250" Height="30" Margin="5" Padding="5"
                             Text="Email" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Height="80" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Оберіть дату народження:" FontSize="14" VerticalAlignment="Center" Foreground="White"/>
                    <DatePicker Name="BirthDatePicker" Width="150" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                </StackPanel>

                <Button Name="ProceedButton" Content="Розрахувати" Width="120" Height="36" Margin="10" Click="Proceed_Click" Background="#FF5555" Foreground="White" FontSize="14" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            </StackPanel>
        </Border>
        
    </Grid>
</Window>
